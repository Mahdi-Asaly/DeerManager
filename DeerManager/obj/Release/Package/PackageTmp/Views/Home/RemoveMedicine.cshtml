@model List<DeerManager.Models.Medicine>

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
@if (Model.Count < 1)
{
    <h2 style="color:red;text-align:center;font-style:italic">אין חיסונים שמורים בבסיס נתונים</h2>
}
@using (Html.BeginForm())
{
    if (Model.Count > 0)
    {
        <div style="text-align:center" ;>
            <h3>בחר איזה חיסון תרצה למחוק</h3><br />
            <div>
                <select name="MedName" id="MedName">
                    <option value="0">--בחר--</option>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                             <option value="@Model[i].MedName">@Model[i].MedName</option>
                        }
                </select>
            </div><br />
            <div class="form-actions no-color">
                <input type="submit" value="מחק" class="btn btn-danger" />
            </div>
        </div>
    }
}
