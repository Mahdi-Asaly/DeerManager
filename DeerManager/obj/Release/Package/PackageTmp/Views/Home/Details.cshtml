@model DeerManager.Models.maintable

@{
    Layout = null;
}

@using (Html.BeginForm("Details", "Home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
<div style="text-align:center" ;>
    <div class="editor-field">
        <div>תעודה מזהה</div>
        @Html.TextBoxFor(model => model.Id, new { disabled = "disabled" })
    </div>
    <div class="form-group">
        <h4>מספר הכבש</h4>
        @Html.EditorFor(model => model.SheepNum, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SheepNum)
    </div>
    <div class="form-group">
        <div>סוג דם</div>
        <select name="Blood" id="Blood">
            <option selected="@Model.Blood">@Model.Blood</option>
            <option value="++">++</option>
            <option value="B+">B+</option>
            <option value="BB">BB</option>
            <option value="אחר">אחר</option>
        </select>
        @*@Html.EditorFor(model => model.Blood, new { htmlAttributes = new { @class = "form-control" } })*@
        @Html.ValidationMessageFor(model => model.Blood)
    </div>
    


    <div class="form-group" style="direction: rtl;">
        <div>מין</div>
            <select name="Gender" id="Gender">
                <option value="@Model.Gender">@Model.Gender</option>
                <option value="זכר">זכר</option>
                <option value="נקבה">נקבה</option>
            </select>
        </div>
    </div>

    <div class="form-group" style="text-align:center;">

        <div class="form-group" style="direction: rtl;">
            <div>קבוצה</div>
            <select name="Group" id="Group">
                <option value="@Model.Group">@Model.Group</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
    </div>
    <div class="form-group" style="direction: rtl; text-align:center;">
        <label for="Birthday">תאריך לידה</label>
        <input type="date" id="Birthday" name="Birthday" value="@Model.Birthday">
    </div>

    <div class="form-group" style="text-align:center;">
        <input type="button" title="מידע נוסף" value="מידע נוסף" onclick="location.href='@Url.Action("AdvancedDetails", "Home", new { id = Model.Id })'" class="btn btn-info" />
        <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("MoveGroupPage","Home", new { id = Model.Group })'">הצג כל הקבוצה</button>
        <input type="submit" value="עדכן את המידע" class="btn btn-success" />
    </div>


}


