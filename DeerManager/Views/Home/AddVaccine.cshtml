@model DeerManager.Models.Vaccinations


@*For the add new sheep*@

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="text-align:center" ;>
        <div class="form-group">
            <label for="Id">תעודת זהות</label>
            @Html.TextBoxFor(model => model.Id, new { disabled = "disabled" })
        </div>
        <div class="form-group" style="direction: rtl; text-align:center;">
            <label for="DateOfVaccination">תאריך שבו לקח את החיסון</label>
            <input type="date" id="DateOfVaccination" name="DateOfVaccination">
        </div>
        <div class="form-group" style="direction: rtl; text-align:center;">
            <label for="Medicine">בחר תרופה</label>
            <select name="Medicine" id="Medicine">
                <option value="Marbocyle">מרבוסיל</option>
                <option value="Vetremixin">Vetremixin</option>
                <option value="Advil">Advil</option>
                <option value="Oxy">אוקסי קלמידיה</option>
            </select>
        </div>
        <div class="form-group" style="direction: rtl; text-align:center;">
            <label for="NextVaccinationDate">תאריך שבו יקח שוב את החיסון</label>
            <input type="date" id="NextVaccinationDate" name="NextVaccinationDate">
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="הוסף" class="btn btn-success" />
            </div>
        </div>
    </div>
}


