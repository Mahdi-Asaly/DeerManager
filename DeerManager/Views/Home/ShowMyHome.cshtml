@section scripts{

    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>

    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />


    @* Normal *@
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>


    @*<script src="~/Scripts/bootstrap.min.js"></script>*@

    @*For the add new sheep*@

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {

            $("#SheepTables").DataTable(
                {
                    "ajax": {
                        "url": "/Home/GetList",
                        "type": "GET",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "Id" },
                        { "data": "SheepNum" },
                        { "data": "Blood" },
                        { "data": "Gender" },
                        { "data": "Group" },
                        { "data": "Birthday" },
                        {"data":"Id" , "render" : function (data) {
                            return "<a class='btn btn-danger btn-sm' style='margin-left:5px' onclick=\'Delete(" + data + ")\'><i class='fa fa-trash'></i>מחק</a><a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Details","Home")/" + data + "')><i class='fa fa-pencil'></i>הצג</a>";
                        },
                            "orderable": false,
                            "searchable":false,
                            "width":"100px"
                        }

                    ],

                    "language": {

                        "emptyTable": "הרשימה ריקה , נא להוסיף חיה חדשה בלחיצה על <b>הוספה חדשה</b>"
                    }
                });

        });



    //adding new sheep
    function PopupForm(url) {
        var formDiv = $('<div/>');
        $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: true,
                    title: 'נא למלות את הנתונים',
                    height: 450,
                    width: 600,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
        });
    }
    function SubmitForm(form) {
                $.validator.unobtrusive.parse(form);
                if ($(form).valid()) {
                    $.ajax({
                        type: "POST",
                        url: form.action,
                        data: $(form).serialize(),
                        success: function (data) {
                            if (data.success) {
                                Popup.dialog('close');
                                dataTable.ajax.reload();

                                $.notify(data.message, {
                                    globalPosition: "top center",
                                    className: "success"
                                })

                            }
                        }
                    });
                }
                return false;
        }

        function Delete(id) {
            if(confirm('האם אתה בטוח שברצונך למחוק שורה זאת ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Home")/' + id,

                    success: function (data) {
                        $("#SheepTables").DataTable().ajax.reload();
                        if (data.success)
                        {

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }
                });
            }
        }
        function findGroup() {
            confirm('ok');
            var table = $('#SheepTables').DataTable();
            table.column('קבוצה').search("8").draw();

        }
        $(document).ready(function () {

        });


        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#SheepTables tfoot th').each(function () {
                var title = $('#SheepTables thead th').eq($(this).index()).text();
                $(this).html('<input type="text" placeholder="חפש ' + title + '" />');
            });

            // DataTable
            var table = $('#SheepTables').DataTable();

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    that
                        .search(this.value)
                        .draw();
                });
            });
        });

    </script>
}